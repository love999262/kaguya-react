{
    "extends": [
        "tslint-eslint-rules"
    ],
    "rules": {
        "variable-name": [
            true,
            "check-format"
        ],
        "member-ordering": [
            true,
            {
                "order": [
                    "static-field",
                    "instance-field",
                    "constructor",
                    "static-method",
                    "instance-method"
                ]
            }
        ],
        "no-inferrable-types": [
            true,
            "ignore-params",
            "ignore-properties"
        ],
        "no-reference": false,
        "indent": [
            true,
            "spaces"
        ],
        "import-spacing": true,
        "arrow-return-shorthand": true,
        "callable-types": true,
        "class-name": true,
        "comment-format": [
            true,
            "check-space"
        ],
        "curly": true,
        "eofline": true,
        "forin": true,
        "interface-over-type-literal": true,
        "label-position": true,
        "no-arg": true,
        "no-construct": true,
        "no-duplicate-super": true,
        "no-empty-interface": true,
        "no-eval": true,
        "no-misused-new": true,
        "no-string-throw": true,
        "no-unnecessary-initializer": true,
        "no-use-before-declare": true,
        "no-var-keyword": true,
        "no-trailing-whitespace": false,
        "quotemark": [
            true,
            "single",
            "avoid-escape",
            "avoid-template"
        ],
        "one-line": [
            true,
            "check-open-brace",
            "check-catch",
            "check-else",
            "check-whitespace"
        ],
        "prefer-const": true,
        "radix": true,
        "semicolon": [
            true,
            "always"
        ],
        "triple-equals": [
            true,
            "allow-null-check"
        ],
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            },
            {
                "call-signature": "onespace",
                "index-signature": "onespace",
                "parameter": "onespace",
                "property-declaration": "onespace",
                "variable-declaration": "onespace"
            }
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-module",
            "check-type",
            "check-preblock"
        ],
        "unified-signatures": true,
        "typeof-compare": true,
        "no-require-imports": true,
        "interface-name": false,
        "new-parens": true,
        "trailing-comma": [
            true,
            {
                "multiline": "always",
                "singleline": "never"
            }
        ],
        "one-variable-per-declaration": [
            true,
            "ignore-for-loop"
        ],
        "space-before-function-paren": [
            true,
            {
                "anonymous": "always",
                "asyncArrow": "always",
                "named": "never",
                "method": "never",
                "constructor": "never"
            }
        ],
        "max-line-length": [
            false,
            140
        ],
        "no-shadowed-variable": false,
        "object-curly-spacing": true
    }
}